<Page
    x:Class="MathApp.View.CircumferencePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MathApp.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Hub Background="#FF212234">
            <Hub.Transitions>
                <TransitionCollection>
                    <EntranceThemeTransition/>
                </TransitionCollection>
            </Hub.Transitions>
            <Hub.Header>
                <StackPanel Orientation="Horizontal" Margin="-30,0,0,0">
                    <AppBarButton Icon="Back" Tapped="Back_Tapped"/>
                    <TextBlock Text="Linea Recta"/>
                </StackPanel>
            </Hub.Header>
            <HubSection Width="300">
                <DataTemplate>
                    <StackPanel>
                        
                    </StackPanel>
                </DataTemplate>
            </HubSection>
            <!--<HubSection Name="BodyApp"
                    Width="1060"/>-->
            <HubSection Name="BodyApp"
                    Width="1060">

            </HubSection>
        </Hub>
    </Grid>
</Page>
